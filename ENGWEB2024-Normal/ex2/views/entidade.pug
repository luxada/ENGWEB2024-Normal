extends layout

block content
  h2.w3-center Entidade: #{nome_entidade}
  p.w3-large NIPC: #{NIPC_entidade}
  h3.w3-center Contratos desta Entidade
  table.w3-table-all
    thead
      tr.w3-teal
        th ID
        th Objeto do Contrato
        th Data de Celebração do Contrato
        th Preço Contratual
    tbody
      each contrato in contratos
        tr
          td
            a(href=`/contratos/${contrato._id}` class="w3-text-teal")= contrato._id
          td= contrato.objectoContrato
          td= contrato.dataCelebracaoContrato
          td= contrato.precoContratual + " €"
  p.w3-large Montante Total dos Contratos: #{montanteTotal} €
  div.w3-container.w3-center
    a.w3-btn.w3-ripple.w3-teal(href="/") Voltar à página principal